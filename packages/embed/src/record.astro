---
import { AppBskyEmbedRecord } from "@atproto/api";

interface Props {
  embed: AppBskyEmbedRecord.View;
}

const { record } = Astro.props.embed;
---

<a target="_blank" rel="noopener noreferrer nofollow" class="post-container">
  <div class="user-info">
    <div class="avatar">
      <img src={record.author.avatar} />
    </div>
    <p class="user-text">
      <span class="name">{record.author.displayName}</span>
      <span class="handle">@{record.author.handle}</span>
    </p>
  </div>

  <p class="content">{record.value.text}</p>

  {
    record.embed?.url && (
      <a
        href={record.embed.url}
        target="_blank"
        rel="noopener noreferrer nofollow"
        class="link-preview"
      >
        <div class="link-content">
          <p class="domain">github.com</p>
          <p class="title" />
          <p class="description" />
        </div>
      </a>
    )
  }
</a>

<style>
  .post-container {
    display: flex;
    flex-direction: column;
    gap: 0.375rem;
    padding: 0.5rem;
    width: 100%;
    border: 1px solid #e5e5e5;
    border-radius: 0.5rem;
    text-decoration: none;
    color: inherit;
    transition: background-color 0.2s;
  }

  .post-container:hover {
    background-color: #f5f5f5;
  }

  .user-info {
    display: flex;
    gap: 0.375rem;
    align-items: center;
  }

  .avatar {
    width: 1rem;
    height: 1rem;
    border-radius: 50%;
    overflow: hidden;
    background-color: #d4d4d4;
    flex-shrink: 0;
  }

  .avatar img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .user-text {
    font-size: 0.875rem;
    margin: 0;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
  }

  .name {
    font-weight: 700;
  }

  .handle {
    color: #666;
    margin-left: 0.25rem;
  }

  .content {
    font-size: 0.875rem;
    margin: 0;
  }

  .link-preview {
    width: 100%;
    border: 1px solid #e5e5e5;
    border-radius: 0.5rem;
    overflow: hidden;
    text-decoration: none;
    color: inherit;
    display: flex;
    flex-direction: column;
  }

  .link-content {
    padding: 0.75rem 1rem;
  }

  .domain {
    font-size: 0.875rem;
    color: #666;
    margin: 0;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
  }

  .title {
    font-weight: 600;
    margin: 0;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .description {
    font-size: 0.875rem;
    color: #666;
    margin: 0.125rem 0 0 0;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
